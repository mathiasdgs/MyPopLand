{% extends 'base.html.twig' %}

{% block title %}Rate index{% endblock %}

{% block body %}
    <h1>Rate index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Article name</th>
                <th>Note</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rate in rates %}
            <tr>
                <td>{{ rate.id }}</td>
                <td>{{ rate.article }}</td>             
                <td>{{ rate.note }}</td>
                <td>
                    <a href="{{ path('admin_rate_show', {'id': rate.id}) }}">show</a>
                    <a href="{{ path('admin_rate_edit', {'id': rate.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</br>
    <a href="{{ path('admin_rate_new') }}">Create new</a>
{% endblock %}

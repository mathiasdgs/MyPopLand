{% extends 'layout.html.twig' %}

{% block title %}Article{% endblock %}

{% block content %}
    
 	<h1>{{ category.title }}</h1>
    	<div class="searchBy">	
			<select name="filter" id="search-By">
    			<option value="">Filtrer par note:</option>
    			<option value="croissant">Croissant</option>
    			<option value="decroissant">Décroissant</option>   
			</select>
		</div>
<div class="article_content_index">		
     {% for article in articles %}
	<div class="card card-4 article">
		{% if article.image %}
		<p>Collection: {{ article.category }}</p>			
		<a href="{{ path('article_showFront', {'id': article.id}) }}"><img class="photo_pop" src="{{ article.image | url }}" alt"image_pop"> </a>
		{% endif %}
		<h4>{{ article.title }}</h4>
		<p>{{ article.rateAverage }} /5 ★</p>
	</div>
	{% else %}
		<tr>
			<td colspan="8">no records found</td>
		</tr>
</div>			
	{% endfor %}
{% endblock %}

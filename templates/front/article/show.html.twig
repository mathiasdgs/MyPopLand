{% extends 'layout.html.twig' %}

{% block title %}Article{% endblock %}

{% block content %}
    <div class="show_article">
        <h1>{{ id.title }}</h1>
        <img class="photo_pop "  src="{{ id.image | url }}">
        <p> Figurine pop de la collection: <span id="article_show_collection">{{ id.category }}</span> </p>
     </br>
    <div id="show_star">
<p>Les utilisateurs lui ont attribué la NOTE de <span id="star"> {{ id.rateAverage }}/5 ★</span> </p>
    </div>


{# test rate js #}
 <div data-popId="{{id.id}}" id="idPop" >&nbsp; rating:
      <span class="fas fa-star" data-star="1"></span>
      <span class="fa fa-star"  data-star="2"></span>
      <span class="fas fa-star" data-star="3"></span>
      <span class="fas fa-star" data-star="4"></span>
      <span class="fas fa-star" data-star="5"></span>
       <span class="rating">-</span>
    </div>
    {# <form name="rating_form">
        <input id="rate_input" type="hidden" class="rating">
    </form> #}
   </div> 
<p> Cette article est disponible sur <a id="lien_article" href="https://www.amazon.fr/">Amazon</a> </p>
<a id="lien_article" href="{{ path('article_index') }}">Revenir sur la page des figurines</a>
 
{% endblock %}
